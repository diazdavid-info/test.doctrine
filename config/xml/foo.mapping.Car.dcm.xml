<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="foo\mapping\Car" table="car" inheritance-type="JOINED">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="make" type="string" column="make" length="45" nullable="false"/>
        <discriminator-column name="type" type="string" />
        <discriminator-map>
            <discriminator-mapping value="1" class="foo\mapping\Small" />
            <discriminator-mapping value="2" class="foo\mapping\Medium" />
            <discriminator-mapping value="3" class="foo\mapping\High" />
        </discriminator-map>
    </entity>
</doctrine-mapping>
